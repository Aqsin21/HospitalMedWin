@using Hospital.DAL.DataContext.Entities
@model List<Doctor>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Doctors</h4>

        <a asp-area="Admin" asp-controller="Doctor" asp-action="Create" class="btn btn-success mb-3">
            Create New Doctor
        </a>

        <div class="card">
            <h5 class="card-header">Doctors CRUD</h5>
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Full Name</th>
                            <th>Department</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@(item.Department?.Name ?? "N/A")</td>
                                <td>@item.Description</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImagePath))
                                    {
                                        <img src="@item.ImagePath" alt="Doctor Image" width="60" height="60" class="rounded" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No image</span>
                                    }
                                </td>
                                <td>
                                    @(item.Price.HasValue ? $"{item.Price.Value:0.00} ₼" : "Not specified")
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Doctor" asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-info btn-sm me-1">
                                        Update
                                    </a>
                                    <a asp-area="Admin" asp-controller="Doctor" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm me-1">
                                        Read
                                    </a>
                                    <form asp-area="Admin" asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id"
                                          method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure?');">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>