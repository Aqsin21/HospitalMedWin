@using Hospital.DAL.DataContext.Entities
@model List<AdminUser>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Admin Management</h4>

        <a asp-area="Admin" asp-controller="AdminManagement" asp-action="Create" class="btn btn-success mb-3">
            Create New Admin
        </a>

        <div class="card">
            <h5 class="card-header">Admins CRUD</h5>
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserName</td>
                                <td>@item.Role.ToString()</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="AdminManagement" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        Update
                                    </a>
                                </td>
                                <td>
                                    @if (item.Role != AdminRole.SuperAdmin)
                                    {
                                        <form asp-area="Admin" asp-controller="AdminManagement" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
