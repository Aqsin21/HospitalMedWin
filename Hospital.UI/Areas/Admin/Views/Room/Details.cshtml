@model Hospital.DAL.DataContext.Entities.Room

<div class="container mt-4">
    <h2>Room Details</h2>

    <div class="mb-3">
        <h5>Room Number:</h5>
        <p>@Model.RoomNumber</p>
    </div>

    <div class="mb-3">
        <h5>Type:</h5>
        <p>@Model.Type</p>
    </div>

    <div class="mb-3">
        <h5>Available:</h5>
        <p>@(Model.IsAvailable ? "Yes" : "No")</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="mb-3">
            <h5>Image:</h5>
            <img src="@Model.ImagePath" alt="Room Image" width="150" height="150" />
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>