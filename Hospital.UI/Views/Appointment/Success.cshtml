@model Hospital.DAL.DataContext.Entities.Appointment

<div class="container mt-5">
    <div class="alert alert-success text-center">
        <h2>Payment Successful!</h2>
        <p>Thank you, @Model.FullName. Your appointment has been booked successfully.</p>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            Appointment Details
        </div>
        <div class="card-body">
            <p><strong>Patient Name:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            <p><strong>Department:</strong> @(Model.Department?.Name ?? "N/A")</p>
            <p><strong>Doctor:</strong> @(Model.Doctor?.FullName ?? "N/A")</p>
            <p><strong>Date & Time:</strong> @Model.AppointmentDate.ToString("f")</p>
            <p><strong>Payment Status:</strong> <span class="text-success">Paid</span></p>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</div>
