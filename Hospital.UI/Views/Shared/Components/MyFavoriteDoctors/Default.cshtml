@model IEnumerable<Hospital.DAL.DataContext.Entities.Doctor>

@if (!Model.Any())
{
    <p>No favorite doctors yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var doctor in Model)
        {
            <li class="list-group-item">
                <b>@doctor.FullName</b> - @doctor.Department?.Name
            </li>
        }
    </ul>
}